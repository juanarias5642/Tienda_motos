@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

@if (!Model.EstaLogueado)
{
    <div class="container mt-5" style="max-width:500px;">
        <div class="text-center mb-4">
            <img src="~/Imagenes/portadamoto.png" alt="Logo" style="width:300px; height:auto;" />
        </div>

        <h3 class="mb-3">Login</h3>
        <form method="POST">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Usuario:</label>
                <input asp-for="Email" onchange="keyUp(this)" class="form-control" />
            </div>
            <div class="mb-4">
                <label asp-for="Contrasena" class="form-label">Contrasena:</label>
                <input type="password" asp-for="Contrasena" onchange="keyUp(this)" class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Limpiar" asp-page-handler="BtClean" class="btn btn-secondary" />
                <input type="submit" value="Entrar" asp-page-handler="BtEnter" class="btn btn-primary" />
            </div>
        </form>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="display-4">Bienvenido</h1>
        </div>

        <style>
            #motoCarousel {
                max-width: 700px;
                margin: auto;
            }

                #motoCarousel .carousel,
                #motoCarousel .carousel-inner,
                #motoCarousel .carousel-item {
                    height: 400px;
                }

                    #motoCarousel .carousel-item img {
                        width: 100%;
                        height: 100%;
                        object-fit: contain; 
                        object-position: center;
                        background-color: #f5f5f5;
                    }

                #motoCarousel .carousel-control-prev-icon,
                #motoCarousel .carousel-control-next-icon {
                    background-color: rgba(0, 0, 0, 0.4); 
                    background-size: 2rem 2rem; 
                    filter: invert(100%); 
                    border-radius: 50%; 
                }
        </style>

        <div id="motoCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Imagenes/xt660.png" class="d-block w-100" alt="Moto 1">
                </div>
                <div class="carousel-item">
                    <img src="~/Imagenes/xadv750.jpeg" class="d-block w-100" alt="Moto 2">
                </div>
                <div class="carousel-item">
                    <img src="~/Imagenes/dr650.png" class="d-block w-100" alt="Moto 3">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#motoCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#motoCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Siguiente</span>
            </button>
        </div>

        <div class="text-center">
            <form method="POST">
                <input type="submit" value="Cerrar" asp-page-handler="BtClose" class="btn btn-danger" />
            </form>
        </div>
    </div>
}
