
@page

@model asp_presentacion.Pages.Ventanas.MotocicletasModel
@{
    ViewData["Titulo"] = "Motocicletas";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Motocicletas</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Cod_moto" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Modelo" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Cilindraje" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Precio" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Color" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Tipo" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Referencia" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Marca" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Chasis" />
                <input type="hidden"
                       asp-for="@Model.Actual!.ImagenUrl" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Motocicleta</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Codigo
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCodigo"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Cod_moto" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Modelo
                            </label>
                            <div class="col-lg-6">
                                <input id="nmModelo"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Modelo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Cilindraje
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCilindraje"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Cilindraje" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Precio
                            </label>
                            <div class="col-lg-6">
                                <input id="nmPrecio"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Precio" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Color
                            </label>
                            <div class="col-lg-6">
                                <input id="nmColor"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Color" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Tipo
                            </label>
                            <div class="col-lg-6">
                                <select id="nmTipo"
                                        class="form-control"
                                        asp-for="@Model.Actual!.Tipo"
                                        asp-items="@(new SelectList(Model.Tipos, "Id", "Nombre"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Referencia
                            </label>
                            <div class="col-lg-6">
                                <select id="nmReferencia"
                                        class="form-control"
                                        asp-for="@Model.Actual!.Referencia"
                                        asp-items="@(new SelectList(Model.Referencias, "Id", "Nombre"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Marca
                            </label>
                            <div class="col-lg-6">
                                <select id="nmMarca"
                                        class="form-control"
                                        asp-for="@Model.Actual!.Marca"
                                        asp-items="@(new SelectList(Model.Marcas, "Id", "Nombre"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Chasis
                            </label>
                            <div class="col-lg-6">
                                <select id="nmChasis"
                                        class="form-control"
                                        asp-for="@Model.Actual!.Chasis"
                                        asp-items="@(new SelectList(Model.Chasises, "Id", "Nombre"))">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Foto</label>
                            <div class="col-lg-6">
                                <input asp-for="FormFile" type="file" class="form-control" />
                                @if (!string.IsNullOrEmpty(Model.Actual.ImagenUrl))
                                {
                                    <img src="~/Imagenes/@(System.IO.Path.GetFileName(Model.Actual.ImagenUrl))" … />

                                }
                        </div>
                    </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Cod_moto,
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flCodigo"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Cod_moto"
                       placeholder="Codigo" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Cod_moto
                            </th>
                            <th>
                                Modelo
                            </th>
                            <th >
                                Cilindraje
                            </th>
                            <th >
                                Precio
                            </th>
                            <th >
                                Color
                            </th>
                            <th >
                                Tipo
                            </th>
                            <th class="cl_actions">
                                Referencia
                            </th>
                            <th >
                                Marca
                            </th>
                            <th >
                                Chasis
                            </th>
                            <th >
                                Foto
                            </th>
                            <th>
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Cod_moto
                                    </td>
                                    <td>
                                        @elemento.Modelo
                                    </td>
                                    <td >
                                        @elemento.Cilindraje
                                    </td>
                                    <td >
                                        @elemento.Precio
                                    </td>
                                    <td >
                                        @elemento.Color
                                    </td>
                                    <td >
                                        @elemento.Tipo
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento._Referencia!.Nombre
                                    </td>
                                    <td >
                                        @elemento.Marca
                                    </td>
                                    <td >
                                        @elemento.Chasis
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(elemento.ImagenUrl))
                                        {
                                            <img src="~/Imagenes/@(System.IO.Path.GetFileName(elemento.ImagenUrl))" style="height:150px;" />



                                        }
                                    </td>

                                    <td>
                                        <input type="submit"
                                               value="Modicar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>

                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
        @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
        {
            <a href="http://localhost:5011/Motocicletas/ExportarPdf"
               class="btn btn-danger"
               style="margin-top:15px;"
               target="_blank"
               rel="noopener noreferrer">
                Exportar a PDF
            </a>
        }
    </div>
</center>