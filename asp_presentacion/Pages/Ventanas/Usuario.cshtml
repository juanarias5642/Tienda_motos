@page
@model UsuarioModel
@{
    ViewData["Title"] = "Bienvenido";
}

<div class="text-center">
    <h1 style="color: #c20000; font-weight: bold; font-size: 2.5rem; letter-spacing: 1px;">
        ¡Bienvenido a Yamotos!
    </h1>
    <p style="color: #555; font-size: 1.2rem;">
        Explora nuestra selección de motocicletas y vive la aventura sobre dos ruedas.
    </p>
</div>

<hr />

<style>
    #promoCarousel {
        max-width: 700px;
        margin: auto;
    }

        #promoCarousel .carousel,
        #promoCarousel .carousel-inner,
        #promoCarousel .carousel-item {
            height: 400px;
        }

            #promoCarousel .carousel-item img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                object-position: center;
                background-color: #f5f5f5;
            }

        #promoCarousel .carousel-control-prev-icon,
        #promoCarousel .carousel-control-next-icon {
            background-color: rgba(0, 0, 0, 0.4);
            background-size: 2rem 2rem;
            filter: invert(100%);
            border-radius: 50%;
        }

    .popup-imagen {
        display: none; 
        position: absolute; 
        top: 10px; 
        left: 50%;
        transform: translateX(-50%);
        width: 280px; 
        background-color: white;
        border: 1px solid #ddd;
        padding: 5px;
        z-index: 100;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

    .btn-vermas:hover + .popup-imagen {
        display: block;
    }
    .popup-imagen:hover {
        display: block;
    }
</style>

<div id="promoCarousel" class="carousel slide my-4" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Imagenes/cbr500.png" class="d-block w-100" alt="Promo 1">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/crf.png" class="d-block w-100" alt="Promo 2">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/cb650.png" class="d-block w-100" alt="Promo 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>

<center>
    <h2 style="color: #c20000; font-weight: 600; border-bottom: 2px solid #c20000; display: inline-block; margin-bottom: 1rem;">
        Motocicletas Destacadas
    </h2>
</center>
<div class="row mt-3">
    <div class="col-md-4 mb-4">
        <div class="card position-relative h-100 shadow-sm">
            <img src="~/Imagenes/xt250.jpg"
                 class="card-img-top"
                 alt="Yamaha XTZ 250"
                 style="height: 200px; object-fit: contain; background-color: #f8f9fa;" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Yamaha XTZ 250</h5>
                <p class="card-text flex-grow-1">
                    Perfecta para aventuras en carretera y ciudad.
                    <strong>$15.000.000</strong>
                </p>
                <button type="button"
                        class="btn btn-outline-danger w-100 btn-vermas">
                    Ver más
                </button>
                <div class="popup-imagen">
                    <img src="~/Imagenes/xt250detalle.png"
                         alt="Detalle Yamaha XTZ 250"
                         class="img-fluid" />
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card position-relative h-100 shadow-sm">
            <img src="~/Imagenes/cbr190.jpg"
                 class="card-img-top"
                 alt="Honda CB 190R"
                 style="height: 200px; object-fit: contain; background-color: #f8f9fa;" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Honda CB 190R</h5>
                <p class="card-text flex-grow-1">
                    Diseño deportivo y gran desempeño urbano.
                    <strong>$12.500.000</strong>
                </p>
                <button type="button"
                        class="btn btn-outline-danger w-100 btn-vermas">
                    Ver más
                </button>
                <div class="popup-imagen">
                    <img src="~/Imagenes/cb190detalle.png"
                         alt="Detalle Honda CB 190R"
                         class="img-fluid" />
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card position-relative h-100 shadow-sm">
            <img src="~/Imagenes/gixxer.jpg"
                 class="card-img-top"
                 alt="Suzuki Gixxer SF"
                 style="height: 200px; object-fit: contain; background-color: #f8f9fa;" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Suzuki Gixxer SF</h5>
                <p class="card-text flex-grow-1">
                    Velocidad, control y estilo en una sola moto.
                    <strong>$13.900.000</strong>
                </p>
                <button type="button"
                        class="btn btn-outline-danger w-100 btn-vermas">
                    Ver más
                </button>
                <div class="popup-imagen">
                    <img src="~/Imagenes/gixxerdetalle.png"
                         alt="Detalle Suzuki Gixxer SF"
                         class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mb-5">
    <form method="POST">
        <input type="submit" value="Cerrar" asp-page-handler="BtClose" class="btn btn-danger" />
    </form>
</div>


